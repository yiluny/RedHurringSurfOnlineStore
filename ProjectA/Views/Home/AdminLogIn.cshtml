@model ProjectA.ViewModels.signInViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>AdminLogIn</title>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body style="background-color: #C0C0C0;">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span4">
            </div>
            <div class="span4" style="margin-top: 200px; border: 1px solid black; background-image: url(../Content/themes/base/images/redherring_bg.jpg); height: auto; padding: 0 0 30px 0;">
                @using (Html.BeginForm())
                {
                    <h3 style="width: 330px; margin-left: 50px; bottom: 0;">Admin Log In</h3>
                    <hr style="width: 330px; margin-left: 50px;" />
                    <ul style="margin-left: 45px; list-style-type: none;">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <li class="alert alert-error" style="list-style-type: none; margin-right:30px;">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Warning!   </strong><br />
                                @Html.ValidationMessage("AdminSignIn")
                            </li>   
                        }
                        <li>Username :</li>
                        <li>
                            <div class="input-prepend">
                                <span class="add-on" style="height: 30px; width: 30px;"><i class="icon-user icon-2x" style="padding-right: 10px; padding-top: 5px;"></i></span>
                                @Html.TextBox("Username", "", new { @class = "span12", placeholder = "Username", style = "height:40px; font-size:17px;" })
                            </div>
                            <br />
                            @Html.ValidationMessage("Username", new { style="color:red;"})
                        </li>

                        <li>Password :</li>
                        <li>

                            <div class="input-prepend">
                                <span class="add-on" style="height: 30px; width: 30px;"><i class="icon-key icon-2x" style="padding-right: 17px; padding-top: 5px;"></i></span>

                                @Html.Password("Password", "", new { @class = "span12", placeholder = "Password", style = "height:40px; font-size:17px;" })
                            </div>
                            <br />
                            @Html.ValidationMessage("Password", new { style="color:red;"})
                        </li>


                        <li style="width: 300px; margin-top: 20px; text-align:right;">
                            <button type="submit" class="btn btn-success">Log in</button>
                        </li>
                    </ul>
                    				

                }
            </div>
            <div class="span4">
            </div>
        </div>
    </div>
</body>
</html>
