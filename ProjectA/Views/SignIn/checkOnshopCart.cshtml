@model ProjectA.ViewModels.signInViewModel

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <title>test</title>
</head>
<body>
@using (Html.BeginForm("test", "SignIn", FormMethod.Post))
{
    <ul style="float:left; list-style-type:none;">
            <li style="font-family:Arial Black; font-size:x-large; margin-top:15px; margin-bottom:25px;">
                Sign In
            </li>

           @if(!ViewData.ModelState.IsValid)
           {
                <li class="alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Warning!</strong>@Html.ValidationMessage("SignIn", new { @class="alert alert-error"})
                </li>    
           }
            
            <li>Username :</li>
            <li>
                
                <div class="input-prepend">
                    <span class="add-on" style="height:30px; width:30px;"><i class="icon-user icon-2x" style="padding-right:10px;padding-top:5px;"></i></span>
                   
                    @Html.TextBox("Username", "", new { @class = "span4", placeholder = "Username",style="height:30px; font-size:17px;" })
                </div>
                <br />
                @Html.ValidationMessage("Username")
            </li>

            <li>Password :</li>
            <li>
                
                <div class="input-prepend"> 
                    <span class="add-on" style="height:30px; width:30px;"><i class="icon-key icon-2x" style="padding-right:17px;padding-top:5px;"></i></span>
              
                    @Html.Password("Password", "", new { @class = "span4", placeholder = "Password",style="height:30px; font-size:17px;" })
                </div>
                <br />
                @Html.ValidationMessage("Password")
            </li>

            <li>
                <label id="lbl_rememberMe" for="rememberMe" style="text-align: center; font-size: 15px; bottom: 0; left: 30px; display: inline;">
                    @Html.CheckBox("rememberMe", new { @id = "rememberMe", style = " text-align:center; font-size:14px" })

                    Remember me
                </label>
            </li>

            <li>
                <a href="/SignIn/ResetPassword" style=" text-align:left; font-size:15px;bottom:0; left:30px">Forget password?</a>
            </li>

            <li style="margin-top:20px;">
                <input type="submit" class="btn btn-medium btn-info" value="Sign In" style="font-size:16px; "/>  
            </li>
        </ul>
    
        <input type="hidden" name="loginLocation" value="shoppingcart" />
    }
</body>
</html>
